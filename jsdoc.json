{
    "source": {
      "include": ["src"]
    },
    "opts": {
      "destination": "docs",
      "recurse": true
    },
    "plugins": [
      "plugins/markdown"
    ],
    "markdown": {
      "parser": "gfm",
      "hardwrap": true
    },
    "templates": {
      "cleverLinks": false,
      "monospaceLinks": false,
      "default": {
        "outputSourceFiles": false
      }
    }
  }
  